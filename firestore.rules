rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /products/{productId} {
      // Anyone can view products
      allow read: if true;
      
      // Only the specific admin account can create, update, or delete
      allow write: if request.auth != null && request.auth.uid == 'zgiICcjIvBVFINVmJJmNHkE5Yi93';
    }
  }
}
